{
  "name": "oni-plugin-typescript",
  "version": "0.0.1",
  "main": "lib/index.js",
  "engines": {
    "oni": "^0.0.1"
  },
  "scripts": {
    "build": "tsc",
    "test": "tsc -p tsconfig.test.json && mocha --recursive ./lib_test/test"
  },
  "oni": {
    "debugging": true,
    "javascript,typescript": {
      "subscriptions": [
        "buffer-update",
        "vim-events"
      ],
      "languageService": [
        "quick-info",
        "goto-definition",
        "completion-provider",
        "formatting",
        "evaluate-block"
      ],
      "diagnosticsService": []
    }
  },
  "dependencies": {
    "lodash": "^4.17.0",
    "mocha": "^3.1.2",
    "typescript": "^2.0.7"
  },
  "devDependencies": {
    "@types/bluebird": "^3.0.35",
    "@types/es6-promise": "0.0.32",
    "@types/lodash": "^4.14.38",
    "@types/mocha": "^2.2.33",
    "@types/node": "^6.0.46",
    "@types/sinon": "^1.16.32",
    "sinon": "^1.17.6"
  }
}
