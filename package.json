{
  "name": "oni",
  "version": "0.0.1",
  "description": "Electron + React extensible NeoVim client",
  "main": "index.js",
  "bin": {
    "oni": "./cli/neotron"
  },
  "scripts": {
    "postinstall": "cd vim/vimfiles/bundle/oni-typescript && npm install",
    "build": "npm run build:browser && npm run build:plugin_api && npm run build:plugins",
    "build:browser": "webpack --config browser/webpack.production.config.js",
    "build:plugin_api": "cd plugin_api && tsc",
    "build:plugins": "cd vim/vimfiles/bundle/oni-typescript && tsc",
    "test": "cd browser && tsc -p tsconfig_with_tests.json && mocha --recursive lib/browser/test",
    "start": "concurrently --kill-others \"npm run start-hot\" \"npm run watch\"",
    "start-hot": "cross-env NODE_ENV=development electron main.js",
    "start-not-dev": "cross-env electron main.js",
    "watch": "webpack-dev-server --config browser/webpack.config.js --hot --host 0.0.0.0 --port 8191"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/extr0py/oni"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron": "^1.4.5",
    "lodash": "^4.16.6",
    "mkdirp": "^0.5.1",
    "neovim-client": "^1.1.0",
    "q": "^1.4.1",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2"
  },
  "devDependencies": {
    "@types/electron": "^1.4.27",
    "@types/lodash": "^4.14.38",
    "@types/mkdirp": "^0.3.29",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.48",
    "@types/q": "0.0.32",
    "@types/react": "^0.14.48",
    "@types/react-dom": "^0.14.18",
    "@types/react-redux": "^4.4.32",
    "autoprefixer": "^6.4.0",
    "concurrently": "^2.2.0",
    "cross-env": "^2.0.0",
    "css-loader": "^0.24.0",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "less-plugin-autoprefix": "^1.5.1",
    "mocha": "^3.1.2",
    "react-hot-loader": "^1.3.0",
    "style-loader": "^0.13.1",
    "ts-loader": "^0.8.2",
    "typescript": "^2.0.3",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.1"
  }
}
